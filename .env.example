# Configuration Template - Copy this to .env and update with your values
# Get coordinates by right-clicking locations in Google Maps

# ============================================
# Required for BOTH main_simple.py and main.py
# ============================================
CALENDAR_YEAR=2025
WORKING_HOURS=9:00-18:00

# ============================================
# Required ONLY for main.py (coordinate-based)
# (Not needed for main_simple.py)
# ============================================

TIMEZONE=Europe/Berlin

# Office/Work location coordinates (example: Berlin)
OFFICE_LATITUDE=52.520008
OFFICE_LONGITUDE=13.404954

# Home location coordinates (example: Berlin)
HOME_LATITUDE=52.516275
HOME_LONGITUDE=13.377704

# Detection radius in meters
RADIUS=100
